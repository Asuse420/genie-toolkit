{
    "include": [
        "thingtalk/**/*"
    ],
    "compilerOptions": {
        "target": "es2018",
        "lib": ["es2018"],
        "module": "commonjs",
        "allowJs": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": false,
        "noUnusedLocals": false,
        "outDir": "../languages-dist",
        "rootDir": ".",
        "sourceMap": true,
        "incremental": true,
        "declaration": false
    },
    "typedocOptions": {
        "mode": "library",
        "out": "jsdoc",
        "name": "Genie",
        "readme": "README.md"
    }
}
