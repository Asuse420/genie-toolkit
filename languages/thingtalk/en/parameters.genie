single_projection_String : Ast.Table = table:complete_table => C.makeEventTableProjection(table);

single_stream_projection_String : Ast.Stream = !nostream 'new' table:complete_table => C.makeEventStreamProjection(table);

single_projection_Entity__tt__picture : Ast.Table = table:complete_table => {
    if (!table.schema!.out['picture_url'])
        return null;
    return new Ast.Table.Projection(null, table, ['picture_url'], table.schema);
};
single_stream_projection_Entity__tt__picture : Ast.Stream = !nostream 'new' table:complete_table => {
    if (!table.schema!.out['picture_url'])
        return null;
    if (!table.schema!.is_monitorable)
        return null;
    return new Ast.Stream.Projection(null, new Ast.Stream.Monitor(null, table, null, table.schema), ['picture_url'], table.schema);
};


the_out_param_Numeric : Ast.VarRefValue = {
    'the' p:out_param_Numeric => p;
    !inference {
        !turking {
            'its' p:out_param_Numeric => p;
            'their' p:out_param_Numeric => p;
        }
    }
}
the_out_param_Array__Any : Ast.VarRefValue = {
    'the' p:out_param_Array__Any => p;
    !inference {
        !turking {
            'its' p:out_param_Array__Any => p;
            'their' p:out_param_Array__Any => p;
        }
    }
}

the_out_param_pair : [Ast.VarRefValue, Ast.VarRefValue] = {
    'the' p1:out_param_Any 'and' p2:out_param_Any => {
        if (p1.name !== p2.name)
            return [p1, p2];
        return null;
    };
}

the_out_param_triple : [Ast.VarRefValue, Ast.VarRefValue, Ast.VarRefValue] = {
    'the' p1:out_param_Any ',' p2:out_param_Any (',' | '') 'and' p3:out_param_Any => {
        if (p1.name === p2.name || p1.name === p3.name || p2.name === p3.name)
            return null;
        return [p1, p2, p3];
    };
}

pair_projection : Ast.Table = {
    ( ('both' | '') outParams:the_out_param_pair 'of' table:with_filtered_table
    | outParams:the_out_param_triple 'of the' table:with_arg_min_max_table
    ) => C.makeMultiFieldProjection('table', table, outParams);
}

where_question : Ast.Table = {
    ( 'where is the' table:with_filtered_table
    | 'where is the' table:with_arg_min_max_table
    ) => C.makeSingleFieldProjection('table', Type.Location, table, 'geo');
}

boolean_projection : Ast.Table = {
    'does' ('the' | '' | 'any') table:with_filtered_table 'have' p:npp_boolean_projection => C.makeSingleFieldProjection('table', Type.Boolean, table, p.name);
    'does' ('the' | '' | 'any') table:with_filtered_table p:avp_boolean_projection => C.makeSingleFieldProjection('table', Type.Boolean, table, p.name);
    'is' ('the' | '') table:with_filtered_table p:pvp_boolean_projection => C.makeSingleFieldProjection('table', Type.Boolean, table, p.name);
    'is' ('the' | '') table:with_filtered_table p:preposition_boolean_projection => C.makeSingleFieldProjection('table', Type.Boolean, table, p.name);
    'is' ('the' | '') table:with_filtered_table p:npi_boolean_projection => C.makeSingleFieldProjection('table', Type.Boolean, table, p.name);
    'is' ('the' | '') table:with_filtered_table p:npv_boolean_projection => C.makeSingleFieldProjection('table', Type.Boolean, table, p.name);
    'is' ('the' | '') table:with_filtered_table p:apv_boolean_projection => C.makeSingleFieldProjection('table', Type.Boolean, table, p.name);
}

for (let pname in _tpLoader.projections) {
    for (let cat in _tpLoader.projections[pname]) {
        if (cat === 'pvp' || cat === 'preposition') {
            for (let [pronoun, base, pvp] of _tpLoader.projections[pname][cat]) {
                question_projection_table : Ast.Table = #(pronoun) #(base) ('is'|'was'|'are'|'were') ('the' | '') table:with_filtered_table #(pvp) =>
                    C.makeSingleFieldProjection('table', null, table, pname);
                question_projection_table : Ast.Table = #(pronoun) #(base) ('is'|'was'|'are'|'were') ('the' | '') table:with_arg_min_max_table #(pvp) =>
                    C.makeSingleFieldProjection('table', null, table, pname);

                if (base) {
                    command_projection_table : Ast.Table = #(base) ('that'|'which'|'') ('the' | '') table:with_filtered_table ('is'|'was'|'are'|'were') #(pvp) =>
                        C.makeSingleFieldProjection('table', null, table, pname);
                    command_projection_table : Ast.Table = #(base) ('that'|'which'|'') ('the' | '') table:with_arg_min_max_table ('is'|'was'|'are'|'were') #(pvp) =>
                        C.makeSingleFieldProjection('table', null, table, pname);
                }
            }
        }
        if (cat === 'avp') {
            for (let [pronoun, base, verb] of _tpLoader.projections[pname][cat]) {
                question_projection_table : Ast.Table = #(pronoun) #(base) ('do'|'does'|'did') ('the' | '') table:with_filtered_table #(verb) =>
                    C.makeSingleFieldProjection('table', null, table, pname);
                question_projection_table : Ast.Table = #(pronoun) #(base) ('do'|'does'|'did') ('the' | '') table:with_arg_min_max_table #(verb) =>
                    C.makeSingleFieldProjection('table', null, table, pname);

                if (base) {
                    command_projection_table : Ast.Table = #(base) ('that'|'which'|'') ('the' | '') table:with_filtered_table #(verb) =>
                        C.makeSingleFieldProjection('table', null, table, pname);
                    command_projection_table : Ast.Table = #(base) ('that'|'which'|'') ('the' | '') table:with_arg_min_max_table #(verb) =>
                        C.makeSingleFieldProjection('table', null, table, pname);
                }
            }
        }
        if (cat === 'reverse_verb') {
            for (let [pronoun, base, verb] of _tpLoader.projections[pname][cat]) {
                question_projection_table : Ast.Table = #(pronoun) #(base) #(verb) ('the' | '') table:with_filtered_table  =>
                    C.makeSingleFieldProjection('table', null, table, pname);
                question_projection_table : Ast.Table = #(pronoun) #(base) #(verb) ('the' | '') table:with_arg_min_max_table  =>
                    C.makeSingleFieldProjection('table', null, table, pname);

                if (base) {
                    command_projection_table : Ast.Table = #(base) ('that'|'which'|'') #(verb) ('the' | '') table:with_filtered_table =>
                        C.makeSingleFieldProjection('table', null, table, pname);
                    command_projection_table : Ast.Table = #(base) ('that'|'which'|'') #(verb) ('the' | '') table:with_arg_min_max_table =>
                        C.makeSingleFieldProjection('table', null, table, pname);
                }
            }
        }
    }
}

for (let [typestr, type] of _tpLoader.types.all) {
    // don't access booleans or enums out arguments generically, as that rarely makes sense
    // (and when it does, you probably want a macro and maybe and edge trigger)
    if (!type.isEnum && !type.isBoolean) {
        $('the_out_param_' + typestr) = {
            'the' p:$('out_param_' + typestr) => p;

            /*!turking {
                'its' p:$('out_param_' + typestr) => p;
                'their' p:$('out_param_' + typestr) => p;
            }
            */
        }

        $('projection_' + typestr) : Ast.Table = outParam:$('the_out_param_' + typestr) 'of' table:with_filtered_table =>
            C.makeSingleFieldProjection('table', type, table, outParam.name);
        $('projection_' + typestr) : Ast.Table = outParam:$('the_out_param_' + typestr) 'of the' table:with_arg_min_max_table =>
            C.makeSingleFieldProjection('table', type, table, outParam.name);
        $('verb_projection_' + typestr) : Ast.Table = outParam:$('out_param_' + typestr) ('do' | 'does') ('the' | '') table:with_filtered_table 'have' =>
            C.makeSingleFieldProjection('table', type, table, outParam.name);
        $('verb_projection_' + typestr) : Ast.Table = outParam:$('out_param_' + typestr) ('do' | 'does') ('the' | '') table:with_arg_min_max_table 'have' =>
            C.makeSingleFieldProjection('table', type, table, outParam.name);
        $('stream_projection_' + typestr) : Ast.Stream = !nostream outParam:$('the_out_param_' + typestr) 'of new' table:with_filtered_table =>
            C.makeSingleFieldProjection('stream', type, table, outParam.name);
        $('stream_projection_' + typestr) : Ast.Stream = !nostream outParam:$('the_out_param_' + typestr) 'of the new' table:with_arg_min_max_table =>
            C.makeSingleFieldProjection('stream', type, table, outParam.name);

        projection_Any = $('projection_' + typestr);
        verb_projection_Any = $('verb_projection_' + typestr);

        if (typestr !== 'Entity__tt__picture' && typestr !== 'String') {
            $('single_projection_' + typestr) : Ast.Table = table:with_filtered_table => C.makeTypeBasedTableProjection(table, type, typestr);

            $('single_stream_projection_' + typestr) : Ast.Stream = !nostream 'new' table:with_filtered_table =>
                C.makeTypeBasedStreamProjection(table, type, typestr);
        }
    }
}

