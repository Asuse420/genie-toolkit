// contextual templates for Genie

{
const assert = require('assert');

const ThingTalk = require('thingtalk');
const Ast = ThingTalk.Ast;
const Type = ThingTalk.Type;
const { clean } = require('../../lib/utils');

// import the combinator library
const C = require('../../lib/sentence-generator/ast_manip');
}

import './constants';
import './timers';
import '../common-parameters';

context complete_query = C.isQueryProgram($) && C.isCompleteCommand($);
context immediate_program = $.isProgram && !C.isContinuousProgram($);
context incomplete_program = !C.isCompleteCommand($);

$root = {
    q:complete_query 'how about' p:constant_Any '?' => C.replaceAnyParameterFromContext(q, p);

    p:complete_query 'do it again' => {
        if (p.rules[0].table.is_monitorable)
            return null;
        return p;
    };

    prog:immediate_program ('do this' | 'do it' | 'repeat this command' | 'set this to run') t:timer => C.addTimerToProgram(prog, t);

    prog:incomplete_program ('' | 'the answer is' | 'use' | 'i want') param:constant_Any => C.fillNextSlot(prog, param);
}
